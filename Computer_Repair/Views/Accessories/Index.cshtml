@model PagedList.IPagedList<Computer_Repair.Models.Accessories>

@using PagedList.Mvc;
@{
    ViewBag.Title = "Accessories";
}
<div style="position: absolute; left: 9%; width: auto">
<h2>Accessorie</h2>

<p>
    @if (User.IsInRole("admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>


@using (Html.BeginForm("Index", "Accessories", FormMethod.Get))
{
    <fieldset>
        Guarantee: @Html.TextBox("GuaranteeFind", ViewBag.CurrentFilter1 as string)
        </fieldset>
        <br>
            <fieldset>
                Country: @Html.TextBox("CountryFind", ViewBag.CurrentFilter2 as string)
                </fieldset>
                <br>
                    <fieldset>
                        Kind: @Html.TextBox("KindFind", ViewBag.CurrentFilter3 as string)
                    </fieldset>
                    <br>
                    <input type="submit" value="to find" />
}
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().KindsOfAccessories.Kind)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().AccessorieName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Firm)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Country)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().ReleaseDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Characteristics)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Guarantee)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Price)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.KindsOfAccessories.Kind)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AccessorieName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Firm)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Country)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Characteristics)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Guarantee)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Price)
                                </td>
                                <td>
                                    @if (User.IsInRole("admin"))
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = item.AccessorieId })
                                    }
                                    @Html.Display("&nbsp;") |
                                    @Html.ActionLink("Details", "Details", new { id = item.AccessorieId }) |

                                    @if (User.IsInRole("admin"))
                                    {
                                        @Html.ActionLink("Delete", "Delete", new { id = item.AccessorieId })
                                    }

                                </td>
                            </tr>
                        }
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter1 = ViewBag.CurrentFilter1, currentFilter2 = ViewBag.CurrentFilter2, currentFilter3 = ViewBag.CurrentFilter3 }))
                    </table>
</div>