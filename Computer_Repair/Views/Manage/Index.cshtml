@model Computer_Repair.Models.IndexViewModel
@{
    ViewBag.Title = "Control";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Changing your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Set password", "SetPassword")
            }
            ]
        </dd>
        <dt>External logins:</dt>
        <dd>
            @Model.Logins.Count [
            @Html.ActionLink("Control", "ManageLogins") ]
        </dd>
