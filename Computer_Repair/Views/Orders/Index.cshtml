@model IEnumerable<Computer_Repair.Models.Orders>

@{
    ViewBag.Title = "Orders";
}

<h2>Orders</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customers.Name_Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Workers.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfComplection)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MarkOfPayment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MarkOfComplection)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WarrantyPeriod)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customers.Name_Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Workers.Name)
        </td>
        <td>
            @item.DateOfOrder.ToShortDateString()
        </td>
        <td>
            @item.DateOfComplection.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Payment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MarkOfPayment)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MarkOfComplection)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalCost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WarrantyPeriod)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OrderId }) |
            @Html.ActionLink("Details", "Details", new { id=item.OrderId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OrderId })
        </td>
    </tr>
}

</table>
